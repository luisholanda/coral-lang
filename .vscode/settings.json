{
  "ghcSimple.workspaceType": "stack",
  "ghcSimple.startupCommands": [
    ":set -fno-diagnostics-show-caret -fdiagnostics-color=never -ferror-spans",
    ":set -fdefer-type-errors -fdefer-typed-holes -fdefer-out-of-scope-variables",
    ":set -X",
    ":set -XAutoDeriveTypeable",
    ":set -XBangPatterns",
    ":set -XBinaryLiterals",
    ":set -XConstraintKinds",
    ":set -XDataKinds",
    ":set -XDefaultSignatures",
    ":set -XDeriveDataTypeable",
    ":set -XDeriveFoldable",
    ":set -XDeriveFunctor",
    ":set -XDeriveGeneric",
    ":set -XDeriveTraversable",
    "set: -XDoAndIfThenElse",
    "set: -XEmptyDataDecls",
    "set: -XExistentialQuantification",
    "set: -XFlexibleContexts",
    "set: -XFlexibleInstances",
    "set: -XFunctionalDependencies",
    "set: -XGADTs",
    "set: -XGeneralizedNewtypeDeriving",
    "set: -XInstanceSigs",
    "set: -XKindSignatures",
    "set: -XLambdaCase",
    "set: -XMonadFailDesugaring",
    "set: -XMultiParamTypeClasses",
    "set: -XMultiWayIf",
    "set: -XNamedFieldPuns",
    "set: -XOverloadedStrings",
    "set: -XPartialTypeSignatures",
    "set: -XPatternGuards",
    "set: -XPolyKinds",
    "set: -XRankNTypes",
    "set: -XScopedTypeVariables",
    "set: -XStandaloneDeriving",
    "set: -XTypeApplications",
    "set: -XTypeFamilies",
    "set: -XTypeOperators",
    "set: -XViewPatterns"
  ]
}
